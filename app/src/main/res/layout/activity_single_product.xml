<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SingleProductActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/productImage"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/productImage"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:id="@+id/productLine1"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productLine1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:id="@+id/productTitle"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productTitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:id="@+id/productAuthor"
        />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/productLine1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/sortByAuthor"
        android:padding="5dp"
        android:text="Sort by this author"
        android:background="@drawable/buttonshpae"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/productAuthor"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/productLine2"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/productLine3"
        android:layout_below="@id/productLine2"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/productInfo"

            />

    </ScrollView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:id="@+id/productPrice"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Add to cart"
        android:id="@+id/productAdd"
        android:background="@drawable/buttonshpae"

        />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/productPrice"
        android:background="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/productLine3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productLine3"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="#3B8143"
        android:text="Available at Panitza"
        android:id="@+id/availableAtPanitza"
        />


</RelativeLayout>